{
    "manifest_version": 3,
    "name": "Jira Quick Capture",
    "version": "1.1",
    "permissions": [
        "contextMenus",
        "storage",
        "notifications",
        "scripting"
    ],
    "host_permissions": [
        "https://*.atlassian.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png"
        }
    }
}